<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #557571;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AdicaoDeAmigoController">
    <children>
        <Label layoutX="268.0" layoutY="14.0" text="Adicionar Amigos" textFill="#f4f4f4">
            <font>
                <Font name="Ink Free" size="24.0" />
            </font>
        </Label>
        <Separator layoutX="153.0" layoutY="60.0" prefWidth="400.0">
            <padding>
                <Insets left="80.0" right="80.0" />
            </padding>
        </Separator>
      <Label layoutX="237.0" layoutY="86.0" text="Grupo" textFill="#f4f4f4">
         <font>
            <Font name="Ink Free" size="24.0" />
         </font>
      </Label>
      <ComboBox fx:id="selecioneGrupo" layoutX="309.0" layoutY="95.0" onAction="#selecionarGrupo" prefHeight="30.0" prefWidth="200.0" promptText="Selecione" style="-fx-background-color: #f4f4f4;" />
      <ListView fx:id="todosAmigosList" layoutX="50.0" layoutY="200.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #f4f4f4;" />
      <ListView fx:id="amigosSelecionadosList" layoutX="400.0" layoutY="200.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #f4f4f4;" />
      <Button fx:id="addAmigo" layoutX="334.0" layoutY="239.0" mnemonicParsing="false" onAction="#adicionarAmigo" style="-fx-background-color: #f4f4f4;" text="Add">
         <font>
            <Font name="Calibri Light" size="12.0" />
         </font>
      </Button>
      <Button fx:id="delAmigo" layoutX="334.0" layoutY="289.0" mnemonicParsing="false" onAction="#deletarAmigo" style="-fx-background-color: #f4f4f4;" text="Del">
         <font>
            <Font name="Calibri Light" size="12.0" />
         </font>
      </Button>
      <Button fx:id="salvarAdicionarAmigo" layoutX="544.0" layoutY="458.0" mnemonicParsing="false" onAction="#salvarAdicaoDeAmigo" style="-fx-background-color: #f4f4f4;" text="Salvar">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancelar" layoutX="614.0" layoutY="458.0" mnemonicParsing="false" onAction="#voltarInicio" style="-fx-background-color: #f4f4f4;" text="Cancelar">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
