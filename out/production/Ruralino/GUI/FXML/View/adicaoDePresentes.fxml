<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #557571;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.AdicaoDePresentesController">
    <children>
        <Label layoutX="249.0" layoutY="14.0" text="Adicionar Presentes" textFill="#f4f4f4">
            <font>
                <Font name="Ink Free" size="24.0" />
            </font>
        </Label>
        <Separator layoutX="150.0" layoutY="59.0" prefWidth="400.0">
            <padding>
                <Insets left="80.0" right="80.0" />
            </padding>
        </Separator>
      <ComboBox fx:id="selecioneParticipante" layoutX="290.0" layoutY="110.0" onAction="#selecionarParticipante" prefHeight="30.0" prefWidth="200.0" promptText="Selecione" style="-fx-background-color: #f4f4f4;" />
      <ListView fx:id="todosPresentesList" layoutX="60.0" layoutY="210.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #f4f4f4;" />
      <Button fx:id="salvarAdicionePresente" layoutX="537.0" layoutY="458.0" mnemonicParsing="false" onAction="#salvarAdicionarPresente" style="-fx-background-color: #f4f4f4;" text="Salvar">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancelar" layoutX="613.0" layoutY="458.0" mnemonicParsing="false" onAction="#voltarInicio" style="-fx-background-color: #f4f4f4;" text="Cancelar">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Button>
      <Button fx:id="addPresente" layoutX="332.0" layoutY="239.0" mnemonicParsing="false" onAction="#adicionarPresente" style="-fx-background-color: #f4f4f4;" text="Add">
         <font>
            <Font name="Calibri Light" size="12.0" />
         </font>
      </Button>
      <Button fx:id="delPresente" layoutX="334.0" layoutY="332.0" mnemonicParsing="false" onAction="#deletarPresente" style="-fx-background-color: #f4f4f4;" text="Del">
         <font>
            <Font name="Calibri Light" size="12.0" />
         </font>
      </Button>
      <ListView fx:id="presentesEscolhidosList" layoutX="390.0" layoutY="210.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #f4f4f4;" />
      <Label layoutX="150.0" layoutY="100.0" text="Participante" textFill="#f4f4f4">
         <font>
            <Font name="Ink Free" size="24.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
